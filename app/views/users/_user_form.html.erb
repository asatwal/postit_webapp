<%= render '/shared/errors', errors: @user.errors %>

<div class="well">
	<%= form_for @user do |f| %>

		<div class = "control-group">
			<%= f.label :username %>
			<%= f.text_field :username %><br/>
		</div>

		<div class = "control-group">
			<%= f.label :password %>
			<%= f.password_field :password %><br/>
		</div>

		<div class = "control-group">
			<%= f.label :password_confirmation %>
			<%= f.password_field :password_confirmation %><br/>
		</div>

		<div class = "control-group">
			<%= f.label :phone, 'Phone number' %>
			<%= f.text_field :phone %>
			<%= link_to '#', id: 'two_factor_phone' do %>
			  <i class='icon-question-sign'></i><br/>
			<% end %>
		</div>

		<div class = "control-group">
			<%= f.label :time_zone %>
			<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all, default: Time.zone.name %><br/>
		</div>

		<%= f.submit class: "btn btn-primary" %>

	<% end %>
</div>