<%= render '/shared/content_title', title: 'Create a New Category' %>

<%= render '/shared/errors', errors: @category.errors %>

<div class="well">

	<%= form_for @category do |f| %>

		<div class = "control-group">
			<%= f.label :name %>
			<%= f.text_field :name %><br/>
		</div>

		<%= f.submit class: "btn btn-primary" %>

	<% end %>
</div>